/* stylelint-disable */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* ============================================ */
/* THEME VARIABLES & DARK MODE SUPPORT */
/* ============================================ */

@layer base {
  :root {
    --background: 249 250 251; /* slate-50 */
    --foreground: 15 23 42; /* slate-900 */
    --card: 255 255 255; /* white */
    --card-foreground: 15 23 42; /* slate-900 */
    --popover: 255 255 255; /* white */
    --popover-foreground: 15 23 42; /* slate-900 */
    --primary: 34 197 94; /* green-500 */
    --primary-foreground: 255 255 255; /* white */
    --secondary: 241 245 249; /* slate-100 */
    --secondary-foreground: 15 23 42; /* slate-900 */
    --muted: 241 245 249; /* slate-100 */
    --muted-foreground: 100 116 139; /* slate-500 */
    --accent: 241 245 249; /* slate-100 */
    --accent-foreground: 15 23 42; /* slate-900 */
    --destructive: 239 68 68; /* red-500 */
    --destructive-foreground: 255 255 255; /* white */
    --border: 226 232 240; /* slate-200 */
    --input: 226 232 240; /* slate-200 */
    --ring: 34 197 94; /* green-500 */
    --radius: 0.5rem;

    /* Custom leaf colors */
    --leaf-50: 236 253 245;
    --leaf-100: 209 250 229;
    --leaf-200: 167 243 208;
    --leaf-300: 110 231 183;
    --leaf-400: 52 211 153;
    --leaf-500: 34 197 94;
    --leaf-600: 22 163 74;
    --leaf-700: 21 128 61;
    --leaf-800: 22 101 52;
    --leaf-900: 20 83 45;

    /* Enhanced theme variables */
    --success: 142 71% 45%;
    --success-foreground: 0 0% 100%;
    --warning: 38 92% 50%;
    --warning-foreground: 0 0% 100%;
    --info: 199 89% 48%;
    --info-foreground: 0 0% 100%;

    /* Typography */
    --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
    --font-mono: 'JetBrains Mono', monospace;

    /* Shadows */
    --shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    --shadow-glow: 0 0 20px rgb(34 197 94 / 0.3);

    /* Transitions */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-normal: 300ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .dark {
    --background: 15 23 42; /* slate-900 */
    --foreground: 248 250 252; /* slate-50 */
    --card: 30 41 59; /* slate-700 */
    --card-foreground: 248 250 252; /* slate-50 */
    --popover: 30 41 59; /* slate-700 */
    --popover-foreground: 248 250 252; /* slate-50 */
    --primary: 34 197 94; /* green-500 */
    --primary-foreground: 255 255 255; /* white */
    --secondary: 51 65 85; /* slate-600 */
    --secondary-foreground: 248 250 252; /* slate-50 */
    --muted: 51 65 85; /* slate-600 */
    --muted-foreground: 148 163 184; /* slate-400 */
    --accent: 51 65 85; /* slate-600 */
    --accent-foreground: 248 250 252; /* slate-50 */
    --destructive: 239 68 68; /* red-500 */
    --destructive-foreground: 255 255 255; /* white */
    --border: 51 65 85; /* slate-600 */
    --input: 51 65 85; /* slate-600 */
    --ring: 34 197 94; /* green-500 */
  }
}

@layer base {
  * {
    @apply border-border;
  }

  html {
    font-family: var(--font-sans);
    scroll-behavior: smooth;
  }

  body {
    @apply bg-background text-foreground antialiased;
    font-feature-settings: "rlig" 1, "calt" 1;
  }

  /* Enhanced typography */
  h1, h2, h3, h4, h5, h6 {
    @apply font-semibold tracking-tight;
  }

  h1 {
    @apply text-4xl lg:text-5xl;
  }

  h2 {
    @apply text-3xl lg:text-4xl;
  }

  h3 {
    @apply text-2xl lg:text-3xl;
  }

  p {
    @apply leading-7;
  }

  /* Focus styles */
  *:focus-visible {
    @apply outline-none ring-2 ring-ring ring-offset-2 ring-offset-background;
  }

  /* Selection */
  ::selection {
    @apply bg-primary/20 text-primary-foreground;
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    @apply w-2;
  }

  ::-webkit-scrollbar-track {
    @apply bg-muted;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-muted-foreground/30 rounded-full;
  }

  ::-webkit-scrollbar-thumb:hover {
    @apply bg-muted-foreground/50;
  }
}

@layer components {
  /* Enhanced card styles */
  .card-hover {
    @apply transition-all duration-300 hover:shadow-soft-lg hover:-translate-y-1;
  }

  .card-interactive {
    @apply transition-all duration-200 hover:shadow-md hover:scale-[1.02] active:scale-[0.98] cursor-pointer;
  }

  /* Button styles */
  .btn-primary {
    @apply bg-leaf-600 text-white hover:bg-leaf-700 active:scale-95 transition-all duration-200 shadow-sm hover:shadow-md;
  }

  .btn-secondary {
    @apply bg-white text-leaf-700 border border-leaf-200 hover:bg-leaf-50 active:scale-95 transition-all duration-200;
  }

  .btn-ghost {
    @apply text-leaf-700 hover:bg-leaf-50 hover:text-leaf-800 transition-all duration-200;
  }

  /* Input styles */
  .input-field {
    @apply border-slate-200 focus:border-leaf-500 focus:ring-2 focus:ring-leaf-100 transition-all duration-200;
  }

  /* Glass effect */
  .glass-effect {
    @apply bg-white/80 backdrop-blur-md border border-white/20;
  }

  .glass-dark {
    @apply bg-slate-900/80 backdrop-blur-md border border-slate-800/20;
  }

  /* Gradient backgrounds */
  .gradient-primary {
    @apply bg-gradient-to-r from-leaf-600 to-emerald-600;
  }

  .gradient-secondary {
    @apply bg-gradient-to-r from-blue-500 to-purple-600;
  }

  .gradient-warm {
    @apply bg-gradient-to-r from-orange-400 to-pink-500;
  }

  /* Animation utilities */
  .animate-fade-in {
    @apply animate-fade-in;
  }

  .animate-slide-up {
    animation: slideUp 0.5s ease-out;
  }

  .animate-bounce-gentle {
    animation: bounceGentle 2s infinite;
  }

  /* Loading states */
  .loading-shimmer {
    @apply relative overflow-hidden;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  /* Status indicators */
  .status-success {
    @apply bg-green-100 text-green-800 border-green-200;
  }

  .status-warning {
    @apply bg-yellow-100 text-yellow-800 border-yellow-200;
  }

  .status-error {
    @apply bg-red-100 text-red-800 border-red-200;
  }

  .status-info {
    @apply bg-blue-100 text-blue-800 border-blue-200;
  }
}

@layer utilities {
  /* Text utilities */
  .text-gradient {
    @apply bg-gradient-to-r from-leaf-600 to-emerald-600 bg-clip-text text-transparent;
  }

  .text-balance {
    text-wrap: balance;
  }

  /* Layout utilities */
  .container-padding {
    @apply px-4 sm:px-6 lg:px-8;
  }

  /* Animation utilities */
  .transition-smooth {
    @apply transition-all duration-300 ease-in-out;
  }

  .transition-bounce {
    @apply transition-all duration-200 ease-out;
  }
}

/* Custom animations */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounceGentle {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5px);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* Mobile optimization for max-width 420px */
@media (max-width: 420px) {
  .container-padding {
    @apply px-3;
  }

  .mobile-optimized {
    @apply text-sm;
  }

  .mobile-touch-target {
    @apply min-h-[44px] min-w-[44px];
  }

  /* Ensure cards are touch-friendly */
  .card-mobile {
    @apply rounded-xl mx-2;
  }

  /* Optimize navigation for small screens */
  .nav-mobile {
    @apply px-2 py-1 text-xs;
  }
}

/* Tablet optimization for max-width 768px */
@media (max-width: 768px) {
  .tablet-optimized {
    @apply px-4 py-3;
  }

  .tablet-text {
    @apply text-base;
  }

  .tablet-grid {
    @apply grid-cols-1 sm:grid-cols-2;
  }
}

/* Mobile optimization for max-width 420px */
@media (max-width: 420px) {
  .container-padding {
    @apply px-3;
  }

  /* Ensure touch targets are at least 44px */
  .mobile-touch-target {
    min-height: 44px;
    min-width: 44px;
  }

  /* Adjust text sizes for small screens */
  .text-responsive {
    font-size: clamp(0.875rem, 2.5vw, 1rem);
  }

  /* Optimize card spacing */
  .card-mobile {
    margin-bottom: 1rem;
  }
}

@media (max-width: 640px) {
  .container-padding {
    @apply px-4;
  }
}

/* Performance optimizations */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .card-hover {
    @apply border-2 border-primary;
  }

  .btn-primary {
    @apply border-2 border-primary-foreground;
  }
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }

  .print-break {
    page-break-before: always;
  }

  body {
    @apply text-black bg-white;
  }

  .card {
    @apply border border-gray-300 shadow-none;
  }
}
